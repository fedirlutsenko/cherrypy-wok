Name:		kimchi
Version:	@PACKAGE_VERSION@
Release:	@PACKAGE_RELEASE@%{?dist}
Summary:	Kimchi server application
BuildRoot:	%{_topdir}/BUILD/%{name}-%{version}-%{release}
Group:		System Environment/Base
License:	LGPL/ASL2
Source0:	%{name}-%{version}.tar.gz
Requires:	kvm
Requires:	libvirt
Requires:	libvirt-python
Requires:	python-CherryPy >= 3.2.0
Requires:	python-Cheetah
Requires:	python-imaging
Requires:	python-M2Crypto
Requires:	python-libxml2
Requires:	python-pam
Requires:	python-psutil
Requires:	python-jsonschema >= 1.3.0
Requires:	python-ethtool

%if 0%{?sles_version} == 11
Requires:       python-ordereddict
%endif

%description
Web server application application to manage KVM/Qemu virtual machines

%prep
%setup

%build
%configure
make

%install
rm -rf %{buildroot}
make DESTDIR=%{buildroot} install

# Install the SysV init scripts
install -Dm 0755 contrib/kimchid.sysvinit %{buildroot}%{_initrddir}/kimchid


%post
service kimchid start
chkconfig kimchid on

%preun
service kimchid stop

%clean
rm -rf $RPM_BUILD_ROOT

